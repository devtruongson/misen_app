{
  "info": {
    "name": "Shopify Config API",
    "description": "API endpoints for managing Shopify configuration",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get All Configs",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/shopify-config",
          "host": ["{{baseUrl}}"],
          "path": ["api", "shopify-config"]
        }
      },
      "response": []
    },
    {
      "name": "Get Active Config",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/shopify-config/active",
          "host": ["{{baseUrl}}"],
          "path": ["api", "shopify-config", "active"]
        }
      },
      "response": []
    },
    {
      "name": "Create New Config",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"storeDomain\": \"your-store.myshopify.com\",\n  \"accessToken\": \"shpat_your_access_token_here\",\n  \"apiVersion\": \"2025-07\",\n  \"description\": \"Production configuration\",\n  \"isActive\": true\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/shopify-config",
          "host": ["{{baseUrl}}"],
          "path": ["api", "shopify-config"]
        }
      },
      "response": []
    },
    {
      "name": "Create Config (Default Values)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"storeDomain\": \"misen-developer.myshopify.com\",\n  \"accessToken\": \"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\",\n  \"description\": \"Default configuration from hardcoded values\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/shopify-config",
          "host": ["{{baseUrl}}"],
          "path": ["api", "shopify-config"]
        }
      },
      "response": []
    },
    {
      "name": "Update Config by ID",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"storeDomain\": \"updated-store.myshopify.com\",\n  \"accessToken\": \"shpat_new_access_token\",\n  \"apiVersion\": \"2025-07\",\n  \"description\": \"Updated configuration\",\n  \"isActive\": false\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/shopify-config/{{configId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "shopify-config", "{{configId}}"]
        }
      },
      "response": []
    },
    {
      "name": "Delete Config by ID",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/shopify-config/{{configId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "shopify-config", "{{configId}}"]
        }
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:6868",
      "type": "string"
    },
    {
      "key": "configId",
      "value": "your-config-id-here",
      "type": "string"
    }
  ]
}
